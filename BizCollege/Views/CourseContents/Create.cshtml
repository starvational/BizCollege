@model BizCollege.DataAccessLayer.Domain.CourseContent
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        
        loadAllSlides();
    });

    function loadAllSlides() {

        var courseId = $("#courseId").val();
        var getPageUrl = "../../CourseContents/Details?id=" + courseId; 
        $("#dvCurrentSlides").load(getPageUrl, function (response, status, xhr) {

            if (status == "error") {
                var msg = "Sorry but there was an error: ";
                $("#contentContainer").html(msg + xhr.status + " " + xhr.statusText);
            }
            else {


            }


        })
    }
</script>
<div class="float-left t-area-wrapper">  
    @using (Html.BeginForm())
    {  

        @Html.ValidationSummary(true)
        <fieldset>
            <legend>New Slide</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.ResourcePath)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ResourcePath)
                @Html.ValidationMessageFor(model => model.ResourcePath)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.IndexInSquence, "Order in Sequence")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.IndexInSquence)
                @Html.ValidationMessageFor(model => model.IndexInSquence)
                @Html.Hidden("courseId",        this.ViewContext.RouteData.Values["id"])
            </div> 
             <div class="editor-label">
                @Html.LabelFor(model => model.IndexInSquence, "Content Type")
            </div>
            <div> 
                @Html.DropDownListFor(model => model.CourseContentType, 
                new SelectList(Enum.GetValues(typeof( BizCollege.DataAccessLayer.Domain.ContentType))), 
                "Please select the type of content")

            </div>
            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>


</div>
<div class="float-left c-box-wrapper">
    <div id="dvCurrentSlides" style="padding-left:25px">
    </div>
</div>
<div class="clear">
</div>
