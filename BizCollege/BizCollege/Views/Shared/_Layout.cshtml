                <ul id="menu">
                    <li>@Html.ActionLink("Courses", "Index", "Courses")</li>
                    <li>@Html.ActionLink("Knowledge Base", "About", "Home")</li> 
                    <li>@Html.ActionLink("Forums", "About", "Home")</li>
                    <li>@Html.ActionLink("Chat", "About", "Home")</li>
                    <li>@Html.ActionLink("My Profile", "About", "Home")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
