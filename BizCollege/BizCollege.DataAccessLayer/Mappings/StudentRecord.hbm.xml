<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="BizCollege.DataAccessLayer"
                   namespace="BizCollege.DataAccessLayer.Domain"
                   default-lazy="false">
  <class name="StudentRecord" lazy="false">
    <id name="Username">
      <generator class="assigned"/>
    </id>

    <set name="StudentCourseEnrollments" cascade="all-delete-orphan">
      <key column="Id"/>
      <many-to-many column="fk_enrollmentId" class="Enrollment"/>
    </set>
    
  </class>
</hibernate-mapping>